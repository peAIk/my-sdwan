{
  "name": "Claude Code Environment",
  "image": "ubuntu:24.04",
  "runArgs": [
    "--userns=keep-id"
  ],
  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/home/vscode/.claude,type=bind"
  ],
  "postCreateCommand": "curl -fsSL https://claude.ai/install.sh | bash",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code"
      ]
    }
  }
}
